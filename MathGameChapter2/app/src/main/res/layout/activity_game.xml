<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mjuaji.mathgamechapter2.GameActivity">

    <EditText
        android:id="@+id/textOperator"
        android:layout_width="83dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="X"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textPartB"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textPartB"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/textPartA"
        android:layout_width="83dp"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textOperator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textOperator"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/textPartB"
        android:layout_width="83dp"
        android:layout_height="64dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/equalsText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOperator"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/buttonChoice1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="160dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/buttonChoice2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="145dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonChoice1"
        app:layout_constraintRight_toLeftOf="@+id/buttonChoice3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/buttonChoice3"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="25dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonChoice2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:text="Score: 999"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="419dp" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="87dp"
        android:layout_height="37dp"
        android:text="Level: 4"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="421dp" />
</android.support.constraint.ConstraintLayout>
